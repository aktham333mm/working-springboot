pipeline{
    agent{
        label 'kube-jenkins'
    }
    stages{
        stage("test"){
            steps{
                echo "hello world"
            }
        }
        stage("build-app"){
            steps{
                container("jenkins-slave-bb"){
                    sh "mvn clean package -Dmaven.test.skip"
                }
                
            }
        }
        stage("deploy to k8s"){
            steps{
                echo "hello world"
            }
        }
    }
}
